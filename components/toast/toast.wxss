.toast{
  position: fixed;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
}
.toast-in{
  background: rgba(1, 1, 1, .5);
  min-width: 30%;
  max-width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
}
.toast_icon{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx auto;
}
.toast_icon > image{
  width: 100%;
  height: 100%;
}
.toast_content{
  text-align: center;
  font-size: 34rpx;
  color: #ffffff;
}